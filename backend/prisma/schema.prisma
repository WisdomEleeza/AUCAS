// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum ResultDocument {
  SHS_GRADUATE
  RE_SIT
  WAITING_SHS_3
  SHS2_SHS1
  TAP
}

enum Sponsorship {
  STUDENT_LOAN
  REQUESTING_SPONSORSHIP
  HAVE_SCHOLARSHIP
}

enum Relationship {
  PARENT
  SIBLING
  OTHER
}

model Student {
  id                 String          @id @default(uuid())
  profilePicture     String?
  resultDocument     ResultDocument?
  currentInstitution String
  country            String
  firstName          String
  lastName           String
  email              String          @unique
  phone              String
  residenceAddress   String
  gender             Gender
  occupation         String
  workAddress        String?
  city               String?
  dateOfBirth        DateTime?
  nationalId         String
  nationality2       String?
  password           String
  relationship       Relationship
  hasScholarship     Sponsorship
  sponsor            Sponsor? // Make it optional, as sponsorship can be self
}

// Sponsor model now has an optional relationship with Student
model Sponsor {
  id               String       @id @default(uuid())
  firstName        String
  lastName         String
  email            String       @unique
  phone            String
  residenceAddress String
  relation         Relationship
  occupation       String
  workAddress      String
  student          Student?     @relation(fields: [studentId], references: [id])
  studentId        String?      @unique // Make it unique, as it's part of a one-to-one relationship
}
